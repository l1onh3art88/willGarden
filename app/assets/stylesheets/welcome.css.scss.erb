//Photography-----------------------------------------------------------
.photocell {
  width: 284px;
  height: 177px;
  overflow: hidden;
  display:inline-block;
  padding: 0px;
  margin: 5px;
}

.photocell img {   
  height:100%;
  width:100%;
  transition: all 3s ease;
  display:block;
  filter: grayscale(0);
  -webkit-filter: grayscale(0);
}
.photocell img:hover {   
   transform:scale(1.25);
   background:rgba(0,0,0,0.8);
   filter: grayscale(1);
  -webkit-filter: grayscale(1);
}

.photo-grid{
width:90%;
height:100%;
margin:auto 40px;
position: relative;
}

//Overlay--------------------------------------------------------------
 .overlay{
  position: fixed;
  top: 0px;
  left: 0px;
  width:100%;
  height:100%;
  background: rgba(0,0,0,0.8);
  text-align:center;
  display:none;
}
.overlay img{
  width:80%;
  margin-top:10%;
  height:70%;
}


