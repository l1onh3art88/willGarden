// Ghost Box-----------------------------------------------------------------
.ghostbox{
  margin: 400px 300px;
  width: 300px;
  position: fixed;
  z-index:1000;
}
.ghostbox a{
  border: 2px solid white;
  text-align: center;
  padding: 10px 90px;
  letter-spacing: 2px;
  font-size: 12px;
  outline: none;
  text-decoration: none;
  background-color: rgba(255, 255, 255, 0);
  z-index: 1000;
  transition-property: color, background-color;
  transition-duration: .6s;
  color:white;
}
.ghostbox a:hover{
  background-color: white;
  color: #0d0d0e !important;  
}
