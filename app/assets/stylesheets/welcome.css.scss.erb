}
.fill{
  width:100%;
  height:100%;
  background-position: center;
}
#landingpage{
  background-size: 100%;
  height: 100%;
}
.navmenu{
  display: none;
  background-color: white;
  height: 100%;
  width:15%;
  left: 85%;
  position: fixed;
}
.navmenu li{
  list-style-type: none;
  height: 11%;
}
.navmenu li a{
  color: black;
  position: relative;
  left: 4em;
  top: 2em;
}
.navmenu li:hover{
  background:grey;
}
.carousel-inner{
  height: 100%;
}
a.left.carousel-control, a.right.carousel-control{
  height:0px;
}

// Ghost Box-----------------------------------------------------------------
.ghostbox{
  margin: 400px auto;
  width: 300px;
  position: relative;
  z-index:1000;
}
.ghostbox a{
  border: 2px solid white;
  text-align: center;
  padding: 10px 90px;
  letter-spacing: 2px;
  font-size: 12px;
  outline: none;
  text-decoration: none;
  background-color: rgba(255, 255, 255, 0);
  z-index: 1000;
  transition-property: color, background-color;
  transition-duration: .6s;
  color:white;
}
.ghostbox a:hover{
  background-color: white;
  color: #0d0d0e !important;  
}
//Will Garden Logo---------------------------------------------
.logo{
  color: white;
  z-index: 1000;
  position: relative;
  margin-left: 5%;
  margin-top: 2%;
}
//Photography-----------------------------------------------------------
.photocell {
  width: 284px;
  height: 177px;
  overflow: hidden;
  display:inline-block;
  position: absolute;
}

.photocell img {    
    transition: all 2s ease;
}
.photocell img:hover {   
   transform:scale(1.25,1.25);
}
.photo-grid{
width:75%;
margin:auto;
position: relative;
}
//Navbar---------------------------------------------------------------
