//Overlay--------------------------------------------------------------
.photo-grid > .photocell .overlay{
  position: absolute;
  top: 0px;
  left: 0px;
  right: 0px;
  bottom: 0px;
  background: rgba(0,0,0,0.5);
  text-align: center;
}
.overlay{
  display:block;
  opacity:0;
}
